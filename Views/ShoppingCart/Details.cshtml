@model STORE_Website.Models.ShoppingCart

@{
    ViewData["Title"] = "Details";
}
@if (User.IsInRole("Admin"))
{
    Layout = "_AdminLayout";

}

<h1>Details</h1>

<div>
    <h4>ShoppingCart</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ApplicationUser)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ApplicationUserId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Items)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Items.Count() != 0)
            {
                @foreach (var item in Model.Items)
                {
                    <div class="card col-md-4 m-auto p-2 m-2 ">
					    <p>Name: @item.Product.Name</p>
					    <p>Price: @item.Product.Price</p>
					    <p>Quantity: @item.Quantity</p>
                    </div>
                }

            }
            else
            {
                <p>No Items</p>
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
